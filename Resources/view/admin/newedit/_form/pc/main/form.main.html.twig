{% trans_default_domain 'admin.materials.category' %}

<div class="d-flex gap-2">



        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Основные настройки раздела  #}
                        {{ 'admin.form.header.main'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">

                <div class="d-flex">
                    <div class="w-50 mt-3">
                        {# Обложка раздела #}
                        {{ include(_self|replace({ "form.main.html.twig": "_cover.html.twig" })) }}
                    </div>

                </div>

            </div>
        </div>


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Настройки локали  #}
                        {{ 'admin.form.header.local'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">

                <div class="d-flex gap-3">
                    {# Сортировка #}
                    <div class="w-25">
                        {{ form_row(form.sort, {  label : 'sort'|trans({}, 'core') }) }}
                    </div>

                    {# Корневая директория #}

                    <div class="w-100">
                        {{ form_row(form.parent, {
                            label : 'admin.form.parent.label'|trans,
                            placeholder : 'admin.form.parent.placeholder'|trans,
                            attr: { 'data-select' : 'select2' }
                        }) }}
                    </div>

                </div>

                {# Настройки локали  #}
                {{ include(_self|replace({ "form.main.html.twig": "_trans.html.twig" })) }}

                {# Символьный код #}

            </div>


        </div>


</div>







